# Template file for generating the .json file that the Arduino IDE
# "Boards Manager" wants to see.  This file must be pre-processed
# before it will be valid:
#  Strip comments.
#  Replace variables:
#   %VERSION% gets the xPLBee Version
#   %HASH% gets the SHA-256 has for the .zip file.
#    (generate with: openssl dgst -sha256 xplbee.zip | sed -e 's/.* //'
#   %SIZE% gets the size of the .zip file
#
{
  "packages": [
    {
      "name": "xPLBee",
      "maintainer": "epsilonrt",
      "websiteURL": "https://github.com/epsilonrt/xplbee",
      "email": "",
      "help": {
        "online": ""
      },
      "platforms": [
        {
          "name": "xPLBee %VERSION%",
          "architecture": "avr",
          "version": "0.%VERSION%",
#
# 3r party packages must use "Contributed"
#
          "category": "Contributed",
          "help": {
          "online": "https://github.com/epsilonrt/xplbee/wiki"
          },
          "url": "https://github.com/epsilonrt/xplbee/releases/download/v%VERSION%/xplbee.zip",
          "archiveFileName": "xplbee.zip",
#
# Package file verification data
#
          "checksum": "SHA-256:%HASH%",
          "size": "%SIZE%",
#
          "boards": [
            {"name": "New xPLBee"}
          ],
          "toolsDependencies": [
            {
              "packager": "arduino",
              "name": "avrdude",
              "version": "6.0.1-arduino5"
            }
          ]
        }
      ],
      "tools": []
    }
  ]
}
